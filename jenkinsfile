pipeline {
    agent any

    tools {
        nodejs  'node'
    }    
    stages { 
     
       stage('Clone') {
            steps {
              git 'https://github.com/Sanketjadhav31/Testing.git'
            }
       }
            stage('Install') {
                steps {
                sh echo 'npm install'
                }
            }    
        stage('Test') {
            steps {
             sh echo 'npm test || echo "No tests defined"'
            }
        }
        stage('bild') {
            steps {
                sh echo 'npm run build'
            }
        }

      }
    }
