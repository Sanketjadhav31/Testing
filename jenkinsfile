pipeline {
    agent any

    tools {
        nodejs 'node'  // âœ… Ensure proper spacing
    }    

    stages { 
        stage('Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/Sanketjadhav31/Testing.git'
            }
        }
        stage('Install') {
            steps {
                bat 'npm install'
            }
        }    
        stage('Test') {
            steps {
                bat 'npm test || echo "No tests defined"'
            }
        }
        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }
    } 
} 
