pipeline {
    agent any

    tools {
        nodejs 'node'  // âœ… Ensure proper spacing
    }    

    stages { 
        stage('Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/Sanketjadhav31/Testing.git'
            }
        }
        stage('Install') {
            steps {
                bat 'npm install'
            }
        }    
        stage('Test') {
            steps {
                bat 'npm test || echo "No tests defined"'
            }
        }
        stage('Build') {
            steps {
               bat 'npm run || echo "No scripts found in package.json"'  // Lists available scripts
               bat 'npm run build || echo "Build script missing!"'  // Prevents failure if script is missing
    }
}
    } 
} 
