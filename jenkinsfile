pipeline {
    agent any

    tools {
        nodejs  'node'
    }    
    stages { 
     
       stage('Clone') {
            steps {
              git 'https://github.com/Sanketjadhav31/Testing.git'
            }
       }
       stage('Install') {
             steps {
             bat 'npm install'
          }
       }    
        stage('Test') {
            steps {
              bat 'npm test || echo "No tests defined"'
            }
        }
        stage('bild') {
            steps {
                 bat 'npm run build'
            }
        }

      }
    }
